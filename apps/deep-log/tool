#!/usr/bin/env bash
set -xe

function dev-environment() {
    if [[ ! -z "$RUNNING_IN_DOCKER" ]]; then
        $@
    else
        docker run --rm -it \
            -v $(pwd):/root/workspace \
            -e RUNNING_IN_DOCKER=true \
            --env-file .env \
            -w /root/workspace \
            --network host \
            $(docker build -q .) \
            $@
    fi
}

function dev-loki() {
    dev-environment pip install -r requirements.txt
    dev-environment python loki.py --reload --log-level debug
}

function prod-loki() {
    pip install -r requirements.txt
    python loki.py
}

function dev-drain-parser() {
    dev-environment pip install -r requirements.txt
    dev-environment python drain_parser.py --reload --log-level debug
}

function prod-drain-parser() {
    dev-environment pip install -r requirements.txt
    dev-environment python  --reload --log-level debug
}


function dev-deep-log() {
    pip install -r requirements.txt
    python deep_log.py --reload --log-level debug
}

function prod-deep-log() {
    pip install -r requirements.txt
    python deep_log.py
}

function dev-shell() {
    dev-environment bash $@
}

function python() {
    dev-environment python $@
}

function build() {
    docker build -t deep-log:v1 .
}

function help() {
    echo "CLI utility for managing this project"
    echo ""
    echo "OPTIONS:"
    echo "  dev-shell               Runs shell in local dev enviornment"
    echo "  dev-server [options]    Runs development server"
    echo "                          the options are the same of python manage.py runserver"
    echo "  dev-consumer            Runs the feature switch queue consumer"
    echo "  cluster [options]       Manages local development cluster with kind"
    echo "  build                   Build Deep Log Docker image"
    echo ""
}

function main() {
    local subcommands=(
        build
        cluster
        watch-python
        dev-data-cleaning
        prod-data-cleaning
        dev-deep-log
        prod-deep-log
        dev-drain-parser
        prod-drain-parser
    )

    if [[ " ${subcommands[@]} " =~ " $1 " ]]; then
        $@
    else
        help
    fi
}

main $@